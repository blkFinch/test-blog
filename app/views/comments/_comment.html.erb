<% @article.comments.each do |comment| %>
        <p>
          <strong><%= comment.commenter %></strong>
        </p>
        <p><em>
          <%= comment.body %></em>
        </p>
        <p style="font-size: small; ">
          <%= link_to 'Delete', [comment.article, comment],
                      method: :delete,
                      data: { confirm: 'weally??' } %>
        </p>
    <% end %>