<!DOCTYPE html>
<html>
<head>
  <title>New User</title>
</head>
<body>
  <h2>Welcome New User!</h2>

  <%= form_with scope: :user, url: users_path, local: true do |form| %>
    <p>
      <%= form.label :screen_name %><br>
      <%= form.text_field :screen_name %>
    </p>
    <p>
      <%= form.label :password %><br>
      <%= form.text_field :password %>
    </p>
    <p>
      <%= form.submit %>
    </p>
  <% end %>
</body>
</html>